<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/contactsFragment">

    <fragment
        android:id="@+id/contactsFragment"
        android:name="com.ang.acb.addressbook.presentation.contacts.ContactsFragment"
        android:label="@string/contacts_fragment_label">

        <action
            android:id="@+id/action_contacts_to_addContact"
            app:destination="@id/createContactFragment" />
        <action
            android:id="@+id/action_contacts_to_contactDetails"
            app:destination="@id/contactDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/createContactFragment"
        android:name="com.ang.acb.addressbook.presentation.create.CreateContactFragment"
        android:label="@string/add_contact_fragment_label" />

    <fragment
        android:id="@+id/contactDetailsFragment"
        android:name="com.ang.acb.addressbook.presentation.details.ContactDetailsFragment">
        <argument
            android:name="contactId"
            app:argType="long" />
    </fragment>
</navigation>
