<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/contactsFragment">

    <fragment
        android:id="@+id/contactsFragment"
        android:name="com.ang.acb.addressbook.presentation.contactlist.ContactsFragment"
        android:label="@string/contacts_fragment_label">

        <action
            android:id="@+id/action_contactsFragment_to_addContactFragment"
            app:destination="@id/addContactFragment" />
        <action
            android:id="@+id/action_contactsFragment_to_contactDetailsFragment"
            app:destination="@id/contactDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/addContactFragment"
        android:name="com.ang.acb.addressbook.presentation.addcontact.AddContactFragment"
        android:label="@string/add_contact_fragment_label" />

    <fragment
        android:id="@+id/contactDetailsFragment"
        android:name="com.ang.acb.addressbook.presentation.contactdetails.ContactDetailsFragment">
        <argument
            android:name="contactId"
            app:argType="long" />
    </fragment>
</navigation>
